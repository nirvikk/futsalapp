<!DOCTYPE html>
<html>
<head>
  <title>Nepal Futstal Group</title>
  <%= favicon_link_tag 'futsal.png'%>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="css/bootstrap.min.css" rel="stylesheet">
  <link href="css/half-slider.css" rel="stylesheet">
</head>

<%= link_to "Homepage", root_path %>
<%= link_to "Featured Ground", features_path %>

<% if admin_signed_in? %>
                    
    <%= link_to "Account Setting", edit_admin_registration_path %>
    <%= link_to "Log Out", destroy_admin_session_path, method: :delete %>
    <%= link_to "Featured Ground", features_path %>

  <% else %>
  
    <li><%= link_to "Log In", new_admin_session_path %></li>
    <li><%= link_to "Sign Up", new_admin_registration_path %></li>
  
  </ul>
  <% end %>
  <%= yield %>

</html>
